import("//build/ohos.gni")

ohos_shared_library("pulse_audio_service_adapter") {
  sanitize = {
    cfi = true
    cfi_cross_dso = true
    cfi_vcall_icall_only = true
    debug = false
  }
  install_enable = true
  sources = [ "src/pulse_audio_service_adapter_impl.cpp" ]
  cflags = [ "-fPIC" ]
  cflags += [ "-Wall" ]
  cflags_cc = cflags

  include_dirs = [
    "include",
    "../audioutils/include",
    "../../../interfaces/inner_api/native/audiocommon/include",
    "../../../services/audio_service/server/include",
  ]

  deps = [ "../audioutils:audio_utils" ]

  public_configs = [ ":audio_external_library_config" ]

  external_deps = [
    "hilog:libhilog",
    "hisysevent:libhisysevent",
    "ipc:ipc_single",
    "media_foundation:media_monitor_client",
    "media_foundation:media_monitor_common",
    "pulseaudio:pulse",
  ]
  part_name = "audio_framework"
  subsystem_name = "multimedia"
}

config("audio_external_library_config") {
  include_dirs = [ "../../../interfaces/inner_api/native/audiocommon/include" ]
}
